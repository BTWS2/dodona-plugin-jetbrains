<idea-plugin url="https://plugins.jetbrains.com/plugin/11166-dodona">
    <id>be.ugent.piedcler.dodona</id>
    <name>Dodona</name>
    <version>1.0.0</version>
    <vendor email="piedcler.declercq@ugent.be" url="https://thepieterdc.github.io/dodona">Pieter De Clercq and Tobiah
        Lissens
    </vendor>

    <description><![CDATA[
      This plugin makes it possible to submit your exercises to Dodona right from within your favourite JetBrains IDE.
    ]]></description>

    <change-notes><![CDATA[
    <ul>
        <li>[IMPROVEMENT] Added a checkbox to the exercise selection dialog, to hide already completed exercises.</li>
        <li>[IMPROVEMENT] Redesigned the course selection dialog, now it contains tabs to only show courses from the last academic year by default.</li>
    </ul>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="162.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>
    <depends optional="true" config-file="java.xml">com.intellij.modules.java</depends>
    <depends optional="true" config-file="python.xml">com.intellij.modules.python</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable
            displayName="Dodona"
            instance="be.ugent.piedcler.dodona.plugin.settings.SettingsConfigurable"/>
        <applicationService serviceInterface="be.ugent.piedcler.dodona.plugin.settings.DodonaSettings"
                            serviceImplementation="be.ugent.piedcler.dodona.plugin.settings.DodonaSettings"/>

        <projectService serviceInterface="be.ugent.piedcler.dodona.plugin.notifications.FeedbackService"
                        serviceImplementation="be.ugent.piedcler.dodona.plugin.notifications.FeedbackServiceImpl"/>
    </extensions>

    <actions>
        <group id="be.ugent.piedcler.dodona.plugin.actions.DodonaActions" text="UGent Dodona" popup="false">
            <add-to-group group-id="ToolbarRunGroup" anchor="after" relative-to-action="Stop"/>
            <action id="be.ugent.piedcler.dodona.submit" class="be.ugent.piedcler.dodona.plugin.actions.SubmitAction"
                    text="Submit to Dodona" description="Submits the current file to Dodona."
                    icon="/icons/submitAction.png">
            </action>
        </group>
    </actions>

</idea-plugin>

<idea-plugin>
    <id>be.ugent.piedcler.dodona</id>
    <name>Dodona</name>
    <version>0.1</version>
    <vendor email="piedcler.declercq@ugent.be" url="https://thepieterdc.github.io">Pieter De Clercq</vendor>

    <description><![CDATA[
      This plugin allows you to submit your exercise to Dodona right from within your favourite JetBrains IDE.
    ]]></description>

    <change-notes>Initial development version.</change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="162.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>
    <depends optional="true" config-file="java.xml">com.intellij.modules.java</depends>
    <depends optional="true" config-file="python.xml">com.intellij.modules.python</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable
            displayName="Dodona Settings"
            instance="be.ugent.piedcler.dodona.settings.DodonaSettings"/>

        <applicationService serviceInterface="be.ugent.piedcler.dodona.services.CourseService"
                            serviceImplementation="be.ugent.piedcler.dodona.services.impl.CourseServiceImpl"/>
        <applicationService serviceInterface="be.ugent.piedcler.dodona.services.ExerciseService"
                            serviceImplementation="be.ugent.piedcler.dodona.services.impl.ExerciseServiceImpl"/>
        <applicationService serviceInterface="be.ugent.piedcler.dodona.services.SeriesService"
                            serviceImplementation="be.ugent.piedcler.dodona.services.impl.SeriesServiceImpl"/>
        <applicationService serviceInterface="be.ugent.piedcler.dodona.services.SubmissionService"
                            serviceImplementation="be.ugent.piedcler.dodona.services.impl.SubmissionServiceImpl"/>
    </extensions>

    <actions>
        <action id="be.ugent.piedcler.dodona.actions.New"
                class="be.ugent.piedcler.dodona.actions.NewGroupAction">
            <add-to-group group-id="NewGroup" anchor="last"/>
        </action>

        <group id="be.ugent.piedcler.dodona.actions.DodonaActions" text="UGent Dodona" popup="false">
            <add-to-group group-id="ToolbarRunGroup" anchor="after" relative-to-action="Stop"/>
            <action id="be.ugent.piedcler.dodona.submit" class="be.ugent.piedcler.dodona.actions.SubmitAction"
                    text="Submit to Dodona" description="Submits the current file to Dodona."
                    icon="/icons/submitAction.png">
            </action>
        </group>
    </actions>

</idea-plugin>
